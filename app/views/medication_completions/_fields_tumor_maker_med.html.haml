- required = "必填"
.nested-fields
  %fieldset
    %legend
      肿瘤标志物
      = link_to_remove_association "delete", f, data: {confirm: "Do you wanna to delete?"}

    - if f.object.persisted?
      = f.hidden_field :id, value: f.object.id

    .row
      = f.input :name, front_error: required
      = f.input :value, front_error: required
      = f.input :unit, front_error: required
      = f.input :is_local_hospital, front_error: required
      = f.input :sample_date, front_error: required, front_error: required,
                                  as: :date, start_year: Date.today.year - 5,
                                  end_year: Date.today.year
