- required = "必填"
.nested-fields
  %fieldset
    %legend
      既往非乳腺癌病史
      = link_to_remove_association "delete", f, data: {confirm: "Do you wanna to delete?"}

    - if f.object.persisted?
      = f.hidden_field :id, value: f.object.id

    .row
      = f.input :name, front_error: required
      = f.input :diagnostic_date, front_error: required
      = f.input :disease_status, front_error: required
