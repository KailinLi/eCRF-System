- required = "必填"
.nested-fields
  %fieldset
    %legend
      阶段计划
      = link_to_remove_association "delete", f, data: {confirm: "Do you wanna to delete?"}

    - if f.object.persisted?
      = f.hidden_field :id, value: f.object.id

    .row
      = f.input :seq, front_error: required
      = f.input :number_of_courses, front_error: required
      = f.input :cure_span, front_error: required
      = f.input :rest_span, front_error: required
