- writable = @concomitant_drug.new_record? || action_name == 'edit' || @concomitant_drug.errors.any?

= simple_form_for [@patient,@concomitant_drug], html: {'data-abide': '', class: writable ? nil : 'disabled'} do |f|
  - required = "必填"
  %fieldset
    %legend
      基本信息
    .row
      = f.input :drugs
      = f.input :cause_for_this_drug
      = f.input :daily_dose
      = f.input :unit_of_dose
      = f.input :start_date,as: :date, start_year: Date.today.year - 10,
                              end_year: Date.today.year+2
      = f.input :end_date,as: :date, start_year: Date.today.year - 10,
                              end_year: Date.today.year+2


  - if writable
    = f.button :submit, class: [:small, :radius]
