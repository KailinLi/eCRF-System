= simple_form_for @user do |f|

  %fieldset
    %legend 基本信息
    .row
      = f.input :username
      = f.input :email, required: true
      = f.input :realname
      = f.input :phone

  %fieldset
    %legend 密码
    .row
      = f.input :password, required: @user.new_record? ? true : false
      = f.input :password_confirmation, required: @user.new_record? ? true : false

  %fieldset
    .row
      = f.association :role, label: Role.model_name.human, collection: @available_roles, as: :select, required: true,include_blank: false
      = f.association :center, label: Center.model_name.human, collection: @available_centers, as: :select, required: true,include_blank: false

    = f.button :submit, class: [:tiny, :radius]
